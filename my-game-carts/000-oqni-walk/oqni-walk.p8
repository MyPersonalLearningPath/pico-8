pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
-- sprite properties
x = 63
y = 63
sprite_size = 3
speed = 1

function _update()
	-- move left and right
	if btn(⬅️) then x -= speed end
	if btn(➡️) then x += speed end
	
	-- ensure it stays in bounds
	if x - sprite_size < 128 then
		x = mid(0, x, 128 - sprite_size)
	elseif x
	end

end

function _draw()
	cls()	-- clear the screen
	spr(0, x, y)	-- draw sprite 0 at (x, y)	
end

